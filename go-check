#!/bin/bash
echo 'deadcode: ----------------------------------------------------------------'
deadcode ./
echo 'gocritic: ----------------------------------------------------------------'
gocritic check -enable="#opinionated" ./...
echo 'gocyclo: -----------------------------------------------------------------'
gocyclo -over 14 ./
echo 'golint: ------------------------------------------------------------------'
golint ./...
echo 'gosec: -------------------------------------------------------------------'
gosec -quiet -sort=0 ./... 2>/dev/null
echo 'mgit: --------------------------------------------------------------------'
mgit -tag +v0.0.1 dry
echo 'misspell: ----------------------------------------------------------------'
misspell -locale=UK *.go *.md 2>/dev/null # -source=go
echo 'shadow: ------------------------------------------------------------------'
shadow ./...
#go vet -vettool=${GOBIN}/shadow ./...
echo 'staticcheck: -------------------------------------------------------------'
staticcheck ./...
echo 'unconvert: ---------------------------------------------------------------'
unconvert ./...
echo 'varcheck: ----------------------------------------------------------------'
varcheck ./...
echo 'DONE ---------------------------------------------------------------------'
#_EoF_

